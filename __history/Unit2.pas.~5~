  Vcl.ActnCtrls, Vcl.ActnMenus, Vcl.Buttons, Vcl.ExtCtrls, System.ImageList,
  Vcl.ImgList;

type
  TFMenu = class(TForm)
    pnl_fundo: TPanel;
    pnl_topo: TPanel;
    pnl_lateral: TPanel;
    Panel1: TPanel;
    SpeedButton1: TSpeedButton;
    ImageList1: TImageList;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FMenu: TFMenu;

