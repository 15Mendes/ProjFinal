procedure TForm1.editContatoAtEnter(Sender: TObject);
begin
  editContatoAt.SelStart := 0;
  editContatoAt.SelLength := 0;
end;

procedure TForm1.PageControl1DrawTab(Control: TCustomTabControl;
  TabIndex: Integer; const Rect: TRect; Active: Boolean);
var
  PC: TPageControl;
  R: TRect;
begin
  PC := Control as TPageControl;
  R := Rect;

  if Active then
  begin
    PC.Canvas.Brush.Color := clSkyBlue;
    PC.Canvas.Font.Color := clBlack;
    PC.Canvas.Font.Style := [fsBold];
  end;

  PC.Canvas.FillRect(R);

  DrawText(PC.Canvas.Handle,
           PChar(PC.Pages[TabIndex].Caption),
           -1,
           R,
           DT_CENTER or DT_VCENTER or DT_SINGLELINE);
end;

procedure TForm1.Panel19Click(Sender: TObject);
begin

end;

// Executor unificado
procedure TForm1.ExecutarAcao(Acao: string; CardPanel: TCardPanel;
  CardCadastro, CardCrud: TCard; Grid: TStringGrid);
begin
  if Acao = 'Cadastrar' then
    CardCadastro.Show
  else if Acao = 'Editar' then
    if Grid.Row > 0 then
      CardCadastro.Show
  else if Acao = 'Excluir' then
    if Grid.Row > 0 then
      ShowMessage('Registro excluído!')
  else if Acao = 'Salvar' then
    ShowMessage('Registro salvo com sucesso!')
  else if Acao = 'Listar' then
    CardCrud.Show
  else if Acao = 'Voltar' then
    CardCadastro.Show
  else if Acao = 'Limpar' then
    ShowMessage('Campos limpos!');
end;

